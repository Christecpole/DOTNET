@page "/syntaxe/binding"
@layout SyntaxeLayout

<h3>Binding</h3>

<div class="card mb-4">
    <div class="card-header bg-info text-white">
        @@Bind - Liaison standard
    </div>
    <div class="card-body">
        <input 
            type="text" 
            class="form-control mb-3" 
            placeholder="Tapez et appuyez sur Entrée..." 
            @bind="texte"/>
            <p>Valeur : <strong>@texte</strong></p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-warning text-white">
        @@Bind:event="oninput" - temps réel
    </div>
    <div class="card-body">
        <input type="text"
               class="form-control mb-3"
               placeholder="Mise à jour en temps réel..."
               @bind="texteTempsReel" 
               @bind:event="oninput"/>
        <p>Valeur : <strong>@texteTempsReel</strong></p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        Formulaire complet
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Nom</label>
                <input  type="text" class="form-control" @bind="nom"/>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Email</label>
                <input  type="email" class="form-control" @bind="email"/>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Age</label>
                <input  type="number" class="form-control" @bind="age"/>
            </div>
        </div>
        <div class="col-md-4 mb-3">
           <label class="form-check-label">J'accepte les conditions'</label>
           <input  type="checkbox" class="form-check-input" @bind="accepte"/>
        </div>
        <button class="btn btn-success" disabled="@(!accepte)">
            Valider
        </button>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        Aperçu des données saisies dans le formulaire
    </div>
    <div class="card-body">
        <table class="table table-sm">
            <tr><th>Nom</th><td>@nom</td></tr>
            <tr><th>Email</th><td>@email</td></tr>
            <tr><th>Age</th><td>@age</td></tr>
            <tr><th>Conditions acceptées</th><td>@(accepte ? "Oui" : "Non")</td></tr>
        </table>
    </div>
</div>



@code {
    private string texte = "";
    private string texteTempsReel = "";

    private string nom = "";
    private string email = "";
    private int age = 25;
    private bool accepte = false;
}
