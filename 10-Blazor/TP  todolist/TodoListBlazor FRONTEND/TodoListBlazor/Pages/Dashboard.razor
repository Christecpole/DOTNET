                                    <input type="checkbox"
                                           class="form-check-input me-3"
                                           checked="@tache.IsCompleted"
                                           @onchange="async _ => await ToggleTache(tache)" />
                                </div>
                               
                                <div>
                                    <span class="@(tache.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                        @tache.Title
                                    </span>
                                    @if (!string.IsNullOrEmpty(tache.Description))
                                    {
                                        <small class="d-block text-muted">@tache.Description</small>
                                    }
                                </div>
                            </div>
                            <span class="badge @GetPriorityBadgeClass(tache.Priority)">
                                @GetPriorityText(tache.Priority)
                            </span>
                        </li>
                    }
                </ul> *@
            }
        </div>
    </div>



}

@if (showDeleteModal && todoToDelete != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close btn-close-white"
                            @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cette tâche ?</p>
                    <div class="alert alert-warning">
                        <strong>@todoToDelete.Title</strong>
                    </div>
                    <p class="text-muted small">Cette action est irréversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                        Annuler
                    </button>
                    <button type="button" class="btn btn-danger"
                            @onclick="ConfirmDelete"
                            disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
}






@code {
    private List<TodoItem> todos = new();
    private bool isLoading = true;

    //gestion de la modale de suppression
    private bool showDeleteModal = false;
    private TodoItem? todoToDelete;
    private bool isDeleting = false;

    private void HandleDelete(TodoItem todo)
    {
        //afficher le modale au lieu de supprimer directement
        todoToDelete = todo;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        todoToDelete = null;
    }

    private async Task ConfirmDelete()
    {
        if (todoToDelete == null) return;

        isDeleting = true;

        var success = await TodoService.DeleteAsync(todoToDelete.Id);

        if (success)
        {
            todos.Remove(todoToDelete);
        }

        isDeleting = false;
        showDeleteModal = false;
        todoToDelete = null;
    }


    //Filtre UI
    private string filtre = "all";
    private IEnumerable<TodoItem> TachesFiltrees => filtre switch
    {
        "done" => todos.Where(t => t.IsCompleted),
        "todo" => todos.Where(t => !t.IsCompleted),
        _ => todos
    };

    protected override async Task OnInitializedAsync()
    {
        if(!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/Auth/LoginPage");
            return;
        }

        todos = await TodoService.GetAllAsync();
        isLoading = false;

    }

    private void ToCreatePage()
    {
        Navigation.NavigateTo("/todos/create");
    }

    private async Task HandleToggle(TodoItem tache)
    {
        if(await TodoService.ToggleAsync(tache.Id))
        {
            tache.IsCompleted = !tache.IsCompleted;
        }
    }

    private async Task HandleEdit(TodoItem tache)
    {
        //Dirige vers la page de modification
        Navigation.NavigateTo($"/todos/edit/{tache.Id}");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/Auth/LoginPage");
    }

