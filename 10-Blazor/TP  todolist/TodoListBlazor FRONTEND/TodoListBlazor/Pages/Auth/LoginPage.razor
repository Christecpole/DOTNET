@page "/"
@page "/Auth/LoginPage"
@using TodoListBlazor.Dtos
@using TodoListBlazor.Services

@layout AuthLayout
@*Injecte navigationmanager pour pouvoir rediriger vers une page*@
@inject NavigationManager Navigation
@inject IAuthService AuthService

<div class="card shadow">
    <div class="card-body p-5">
        @*En tête*@
        <div class="text-center">
            <h1 class="h3 fw-bold">TODOList</h1>
            <p class="text-muted">Connectez-vous à votre compte</p>
        </div>

        @*Message d'erreur serveur*@
        @*S'affiche uniquement si l'api retourne une erreur*@
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle me-2">@errorMessage</i>
            </div>
        }
       

        @*Formulaire avec validation*@

        <EditForm Model="loginDto" OnValidSubmit="HandleLogin">
            @*Activer la validation par Dataannotation*@
            <DataAnnotationsValidator />

            @*Affiche toutes les erreurs de validation en haut du formulaire*@
            <ValidationSummary class="text-danger" />

            @*Champs username*@
            <div>
                <label class="form-label fw-semibold">Nom d'utilisateur</label>
                <InputText 
                    class="form-control form-control-lg"
                    placeholder="Entrez votre nom d'utilisateur"
                           @bind-Value="loginDto.Username" />
                <ValidationMessage For="@(() => loginDto.Username)" class="text-message"/>
            </div>
            @*Champs password*@
            <div>
                <label class="form-label fw-semibold">Mot de passe</label>
                <InputText type="password" class="form-control form-control-lg"
                           placeholder="Entrez votre mot de passe"
                           @bind-Value="loginDto.Password" />
                <ValidationMessage For="@(() => loginDto.Password)" class="text-message" />
            </div>

            @*bouton de soumission*@
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" disabled="@isLoading">
                @if(isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Connection en cours...</span>
                }
                else
                {
                    <span>Se connecter</span>
                }
            </button>
        </EditForm>

        @*Lien vers la page d'inscription*@
        <div class="text-center">
            <span class="text-muted">Pas encore de compte?</span>
            <a href="Auth/register" class="text-decoration-none fw-semibold">Créer un compte</a>
        </div>
    </div>
</div>

@code{
    //objet qui contient les données du formulaire
    //lié aux champs via @bind-Value
    private LoginDto loginDto = new LoginDto();

    //message d'erreur vient du server
    private string? errorMessage;

    //Indiquer si une requête est en cours(pour afficher le spinner)
    private bool isLoading = false;

    //Methode appelé quand le formulaire est soumis et que la validation passe
    private async Task HandleLogin()
    {
        //Reinitialise le message d'erreur
        errorMessage = string.Empty;

        // Active le mode chargement ( affiche le spinner)
        isLoading = true;

        try
        {
            //Appel au service d'authentification
            var (success, error) = await AuthService.LoginAsync(loginDto);

            if (success)
            {
                //NavigateTo change l'url et affiche la nouvelle page
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = error;
            }
        }
        catch(Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            // desactiver le mode chargement
            isLoading = false;
        }
    }
}


