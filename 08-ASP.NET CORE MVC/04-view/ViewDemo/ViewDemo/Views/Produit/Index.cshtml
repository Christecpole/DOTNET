@model List<Produit>

<h1>@ViewData["Title"]</h1>

<h2>@Model.Count produit(s)</h2>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>stock</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var produit in Model)
    {
        <tr> 
            <td>@produit.Id</td>
            <td>@produit.Nom</td>
            <td>@produit.Prix.ToString("C")</td>
            <td>@produit.Stock</td>
        </tr>
    }
    </tbody>
    
</table>

<hr />

@*Lien simple vers une action*@
<a asp-controller="Produit" asp-action="Details" class="btn btn-primary" >Voir Details d'un produit</a>

@*Liens avec des paramètres de route*@
<a asp-controller="Produit" asp-action="Details" asp-route-id="5" class="btn btn-info">Voir le produit #5</a>

@*Lien avec plusieurs paramètres*@
<a asp-controller="Produit" asp-action="Liste" asp-route-categorie="Electronique" asp-route-sort="prix" class="btn btn-info">Produits electroniques</a>

