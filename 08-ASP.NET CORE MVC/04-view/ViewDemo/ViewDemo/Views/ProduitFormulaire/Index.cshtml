@model List<Produit>

<h1>@ViewData["Title"]</h1>

<a asp-controller="ProduitFormulaire" asp-action="CreerProduit" class="btn btn-info">Créer un nouveau produit</a>

@if(Model == null || Model.Count == 0)
{
    <div class="alert alert-info mt-3">
        <p>Aucun produit pour le moment. Créez votre premier produit !</p>
    </div>
}
else
{
    <h2>@Model.Count produit(s)</h2>

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produit in Model)
            {
                <tr>
                    <td>@produit.Id</td>
                    <td>@produit.Nom</td>
                    <td>@produit.Prix.ToString("C")</td>
                    <td>@produit.Stock</td>
                </tr>
            }
        </tbody>

    </table>
}
