@{
    ViewData["Title"] = "La page IF ELSE";

    var isConnecte = false;
    var stock = 0;
}

@if (isConnecte)
{
    <p>Bienvenue, Vous êtes connecté !</p> // ne s'affiche que si la condition est vrai'
}

@if(stock > 0)
{
    <span class="badge bg-success">En stock</span>
}
else
{
    <span class="badge bg-danger">Rupture de stock</span>

}




